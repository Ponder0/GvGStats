<Window x:Class="GvGStats.LeaderboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GvGStats"
        mc:Ignorable="d"
        Title="LeaderboardWindow" Height="524" Width="491" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_Back" Content="Back" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="41" Click="btn_Back_Click"/>
        <Label x:Name="label_WindowTitle" Content="Leaderboard" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <DataGrid x:Name="dataGrid_LeaderboardSheet" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Height="424" Width="323"/>

    </Grid>
</Window>
